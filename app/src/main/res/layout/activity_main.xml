<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_app_title"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_ttt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:text="@string/str_title_ttt"
            android:textColor="@color/colorWhite"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/btn_hm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:text="@string/str_title_hm"
            android:textColor="@color/colorWhite"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="72dp" />

        <Button
            android:id="@+id/btn_ttb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:text="@string/str_title_ttb"
            android:textColor="@color/colorWhite"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="135dp" />

        <TextView
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:id="@+id/textv_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_gamestatistic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:text="@string/textv_gamestatistic"
            android:textColor="@color/colorWhite"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="135dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="90dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorAccent"
            android:text="@string/str_settings"
            android:textColor="@color/colorWhite"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="135dp" />

        <Button
            android:id="@+id/btn_switch_lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="90dp"
            android:background="@color/colorAccent"
            android:text="@string/str_switch_lang"
            android:textColor="@color/colorWhite"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="135dp" />
    </LinearLayout>


</LinearLayout>

