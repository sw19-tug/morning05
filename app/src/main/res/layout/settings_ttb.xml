<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".TTBActivity"
    android:rowCount="3"
    android:columnCount="1">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_marginTop="40dp"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_rowWeight="1" >

        <TextView
            android:id="@+id/button_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:text="Button Color"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <Button
            android:id="@+id/green_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorGreen"
            android:text="green"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="30dp" />

        <Button
            android:id="@+id/blue_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorBlue"
            android:text="blue"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="30dp" />

        <Button
            android:id="@+id/red_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorRed"
            android:text="red"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="30dp" />

        <Button
            android:id="@+id/magenta_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorMagenta"
            android:text="magenta"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="30dp" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_rowWeight="1">

        <TextView
            android:id="@+id/background_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Screen Color"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"/>

        <Button
            android:id="@+id/white_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorWhite"
            android:text="white"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="30dp"/>

        <Button
            android:id="@+id/black_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorBlack"
            android:text="black"
            android:textColor="@color/colorWhite"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="30dp"/>

        <Button
            android:id="@+id/grey_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorGrey"
            android:text="grey"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="30dp" />

        <Button
            android:id="@+id/magenta_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorMagenta"
            android:text="magenta"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="30dp" />
    </GridLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="1"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_rowWeight="1">

        <Button
            android:text="@string/str_back"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:text="OK"
            android:layout_row="0"
            android:layout_column="3" />
    </GridLayout>

</GridLayout>