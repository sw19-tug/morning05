<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".TTBActivity" >

        <TextView
            android:id="@+id/textv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:text="@string/str_title_ttb"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_play_ttb"
            android:textSize="18sp"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="8dp"/>
        <Button
            android:id="@+id/btn_settings_ttb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_settings"
            android:textSize="18sp"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="8dp" />
        <Button
            android:id="@+id/btn_back_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_back"
            android:textSize="18sp"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="8dp" />
</LinearLayout>